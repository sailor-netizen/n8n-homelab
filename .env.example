#--- GENERAL SYSTEM CONFIGURATION ---
#The generic time zone used by n8n (e.g., Europe/Berlin)
GENERIC_TIMEZONE=Australia/Brisbane

#A long, random key to encrypt all n8n credentials (MANDATORY)
N8N_ENCRYPTION_KEY="CHANGE_ME_TO_A_RANDOM_STRING"

#The IP or domain of your Ubuntu VM (Crucial for n8n webhooks)
VM_BASE_URL=http://192.168.0.6

#--- POSTGRES DATABASE CONFIGURATION (SHARED) ---
POSTGRES_HOST=postgres
POSTGRES_USER=n8n_master
POSTGRES_PASSWORD=CHANGE_ME

#--- INSTANCE 1: PROXMOX MANAGEMENT (Port 5678) ---
DB_N8N_PROXMOX=db_proxmox_manager
N8N_PROXMOX_HOST_PORT=5678
N8N_PROXMOX_USER=admin-proxmox
N8N_PROXMOX_PASSWORD=CHANGE_ME
N8N_PROXMOX_WEBHOOK_BASE_URL=${VM_BASE_URL}:${N8N_PROXMOX_HOST_PORT}

#--- INSTANCE 2: HOMELAB AUTOMATION (Port 5679) ---
DB_N8N_HOMELAB=db_homelab_automations
N8N_HOMELAB_HOST_PORT=5679
N8N_HOMELAB_USER=admin-homelab
N8N_HOMELAB_PASSWORD=CHANGE_ME
N8N_HOMELAB_WEBHOOK_BASE_URL=${VM_BASE_URL}:${N8N_HOMELAB_HOST_PORT}

#--- INSTANCE 3: GAME MANAGER (Port 5680) ---
DB_N8N_GAME=db_game_manager
